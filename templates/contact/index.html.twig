{% extends 'base.html.twig' %}

{% block title %}Ecrivez nous{% endblock %}

{% block body %}
{# Afficahge des messages s'il y en a #}

    {% for label, messages in app.flashes(['success', 'warning','danger']) %}
        {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show mt-3" role="alert">
        {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endfor %}
    {% endfor %}
{#  #}
{{form_start(form)}}
    <div class="row">
        {% if app.user %}
            <div class="d-none">
                {{form_row(form.email,{ value : app.user.email })}}
            </div>
            <div class="col-12 col-md-6">
                <div class="col-12 from-group">
                {{form_label(form.nom)}}
                {{form_widget(form.nom)}}
                {{form_errors(form.nom)}}
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="col-12 from-group">
                {{form_label(form.prenom)}}
                {{form_widget(form.prenom)}}
                {{form_errors(form.prenom)}}
                </div>
            </div>  
        {% else %}
        <div class="col-12 col-md-4">
            {{form_row(form.email)}}
        </div>
        <div class="col-12 col-md-4">
            <div class="col-12 from-group">
            {{form_label(form.nom)}}
            {{form_widget(form.nom)}}
            {{form_errors(form.nom)}}
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="col-12 from-group">
            {{form_label(form.prenom)}}
            {{form_widget(form.prenom)}}
            {{form_errors(form.prenom)}}
            </div>
        </div>
    {% endif %}
    </div>
    <div class="row">
        <div class="col-12 form-group">
            {{form_row(form.sujet)}}
        </div>    
    </div>
    <div class="row">
        <div class="col-12 form-group">
            {{form_row(form.message)}}
        </div> 
    </div>
    <button class="btn btn-success mt-3">Envoyer</button>
{{form_end(form)}}

{% endblock %}
