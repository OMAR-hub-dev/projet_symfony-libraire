{% extends 'base.html.twig' %}

{% block title %}Nos livres{% endblock %}

{% block body %}
<div class="row mt-3">
    <div class="col-12 col-md-3">
        <img src="{{asset('images/livres/'~ livre.imageName )}}" alt="{{livre.titre}}" class="img-fluid">
    </div>
    <div class="col-12 col-md-9">
        <h1>{{livre.titre}}</h1>
            {# le twig filter |raw demande a symfony d'interpreter les balises html contenu dans la donn√©es (bdd) devant etre afiicher #}
        <div>{{livre.description|raw }}</div>
        <p>{% if livre.pseudo is defined and livre.auteur.pseudo is not null %}
        {{livre.auteur.pseudo}}
        {% else %} 
        {# {{livre.auteur.nom}}{{livre.auteur.prenom}} #}
        {{livre.auteur.nom ~' '~ livre.auteur.prenom}}
        {% endif %}
        </p>
    </div>
    <div>
    <a href="{{ path('admin_livre_index') }}" class="btn btn-primary bg-primaray mt-2"><i class="fa fa-backward" aria-hidden="true"></i>back to list</a>

    </div>
</div>
{% endblock %}
